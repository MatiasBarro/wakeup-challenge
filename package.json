{
    "name": "wakeup-challenge",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "lint": "turbo lint",
        "test": "turbo test",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "dev:restaurant-api": "turbo dev --filter=restaurant-api",
        "test:restaurant-api": "turbo test --filter=restaurant-api",
        "build:restaurant-api": "turbo build --filter=restaurant-api",
        "dev:restaurant-app": "turbo dev --filter=restaurant-app",
        "test:restaurant-app": "turbo test --filter=restaurant-app",
        "build:restaurant-app": "turbo build --filter=restaurant-app"
    },
    "devDependencies": {
        "prettier": "^3.2.5",
        "turbo": "latest"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "npm@10.2.4",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}
